@model List<TPIndustriaBD2.Models.ViewModels.ListarFornecedoresProdutosVM>

<h2><i class="fas fa-cogs"></i> Fornecedores de Cada Produto</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-box"></i> Produto</th>
            <th><i class="fas fa-truck"></i> Fornecedor</th>
        </tr>
    </thead>
    <tbody>
        @{
            string produtoAtual = null;
        }

        @foreach (var item in Model)
        {
            <tr>
                @if (produtoAtual != item.Produto)
                {
                    <td><strong>@item.Produto</strong></td>
                    produtoAtual = item.Produto;
                }
                else
                {
                    <td></td>
                }

                <td>@item.Fornecedor</td>
            </tr>

            @if (produtoAtual != item.Produto)
            {
                <tr><td colspan="2"></td></tr>
            }
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Index", "Fornecedor")" class="btn btn-info">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
