@model IEnumerable<TPIndustriaBD2.Models.ViewModels.FornecedoresEnderecosVM>

@{
    ViewData["Title"] = "Listagem de Fornecedores e Endereços";
}

<h2><i class="fas fa-truck"></i> Listagem de Fornecedores e Endereços</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-user"></i> Nome</th>
            <th><i class="fas fa-building"></i> CNPJ</th>
            <th><i class="fas fa-phone"></i> Contato</th>
            <th><i class="fas fa-map-marked-alt"></i> CEP</th>
            <th><i class="fas fa-road"></i> Rua</th>
            <th><i class="fas fa-house-user"></i> Número</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var fornecedorEndereco in Model)
            {
                <tr>
                    <td>@fornecedorEndereco.Nome_Fornecedor</td>
                    <td>@fornecedorEndereco.CNPJ</td>
                    <td>@fornecedorEndereco.Contato</td>
                    <td>@fornecedorEndereco.CEP</td>
                    <td>@fornecedorEndereco.Rua</td>
                    <td>@fornecedorEndereco.Numero</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center"><i class="fas fa-exclamation-circle"></i> Nenhum fornecedor encontrado.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="ListarFornecedoresProdutos" asp-controller="Fornecedor" class="btn btn-info">
    <i class="fas fa-box-open"></i> Produtos Fornecidos por Fornecedor
</a>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
