@model List<TPIndustriaBD2.Models.ViewModels.ListarProdutosGruposVM>

<h2><i class="fas fa-layer-group"></i> Grupos de Produtos</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-folder"></i> Grupo</th>
            <th><i class="fas fa-box"></i> Produto</th>
        </tr>
    </thead>
    <tbody>
        @{
            string grupoAtual = null;
        }

        @foreach (var produtosGrupo in Model)
        {
            <tr>
                @if (grupoAtual != produtosGrupo.Nome_Grupo)
                {
                    <td><strong><i class="fas fa-folder-open"></i> @produtosGrupo.Nome_Grupo</strong></td>
                    grupoAtual = produtosGrupo.Nome_Grupo;
                }
                else
                {
                    <td></td>
                }

                <td>@produtosGrupo.Nome_Produto</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" asp-controller="Produto" class="btn btn-info">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
