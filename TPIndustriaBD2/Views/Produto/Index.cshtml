@model List<TPIndustriaBD2.Models.Produto>

<h2><i class="fas fa-list-alt"></i> Lista de Produtos</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-box"></i> Nome do Produto</th>
            <th><i class="fas fa-dollar-sign"></i> Preço Médio</th>
            <th><i class="fas fa-warehouse"></i> Saldo</th>
            <th><i class="fas fa-cog"></i> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome_Produto</td>
                <td>@produto.Preco_medio.ToString("C")</td>
                <td>@produto.Saldo</td>
                <td>
                    <a asp-action="ProdutoDetails" asp-controller="Produto" asp-route-id="@produto.ID_Produto" class="btn btn-info btn-sm">
                        <i class="fas fa-file-alt"></i> Ficha Produto
                    </a>
                    <a asp-action="ExibirMenorPrecoCompra" asp-controller="Produto" asp-route-id="@produto.ID_Produto" class="btn btn-success btn-sm">
                        <i class="fas fa-money-bill-wave"></i> Menor Preço de Compra
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="ListarProdutosPorGrupo" asp-controller="Produto" class="btn btn-secondary">
        <i class="fas fa-layer-group"></i> Ver Grupos de Produtos
    </a>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
