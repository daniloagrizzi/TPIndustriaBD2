@model IEnumerable<TPIndustriaBD2.Models.Setor>

@{
    ViewData["Title"] = "Lista de Setores";
}

<h2>Lista de Setores</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome do Setor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var setor in Model)
        {
            <tr>
                <td>@setor.ID_Setor</td>
                <td>@setor.Nome_Setor</td>
                <td>
                    <a asp-action="ExibirConsumosPorSetorEspecifico" asp-controller="Setor" asp-route-id="@setor.ID_Setor" class="btn btn-info">
                        Ver consumo desse setor
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="ProdutosConsumidosPorSetor" asp-controller="Setor" class="btn btn-info">
        Produtos Consumidos Por setor
    </a>
</table>
