@model IEnumerable<TPIndustriaBD2.Models.Setor>

@{
    ViewData["Title"] = "Lista de Setores";
}

<h2><i class="fas fa-sitemap"></i> Lista de Setores</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-building"></i> Nome do Setor</th>
            <th><i class="fas fa-cogs"></i> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var setor in Model)
        {
            <tr>
                <td>@setor.Nome_Setor</td>
                <td>
                    <a asp-action="ExibirConsumosPorSetorEspecifico" asp-controller="Setor" asp-route-id="@setor.ID_Setor" class="btn btn-info">
                        <i class="fas fa-eye"></i> Ver Consumo
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="ProdutosConsumidosPorSetor" asp-controller="Setor" class="btn btn-info">
    <i class="fas fa-box-open"></i> Produtos Consumidos por Setor
</a>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
