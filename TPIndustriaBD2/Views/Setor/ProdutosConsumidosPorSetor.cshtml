@model IEnumerable<TPIndustriaBD2.Models.ViewModels.ListarProdutosConsumidosPorSetor>

@{
    ViewData["Title"] = "Produtos Consumidos por Setores";
}

<h2><i class="fas fa-box-open"></i> Produtos Consumidos por Setores</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-building"></i> Setor</th>
            <th><i class="fas fa-box"></i> Produto</th>
        </tr>
    </thead>
    <tbody>
        @{
            string setorAtual = null;
        }

        @foreach (var setor in Model)
        {
            foreach (var produto in setor.Produtos)
            {
                <tr>
                    @if (setorAtual != setor.Nome_Setor)
                    {
                        <td><strong><i class="fas fa-building"></i> @setor.Nome_Setor</strong></td>
                        setorAtual = setor.Nome_Setor;
                    }
                    else
                    {
                        <td></td>
                    }

                    <td><i class="fas fa-box"></i> @produto</td>
                </tr>
            }

            <tr><td colspan="2"></td></tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Index", "Setor")" class="btn btn-info">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
