@model List<TPIndustriaBD2.Models.ViewModels.ConsumoPorSetorEspecificoVM>

@if (Model != null)
{
    string nomeSetor = string.Empty;
    var setores = Model.ToList();
    var titulo = setores.FirstOrDefault();
    nomeSetor = titulo.NomeSetor;
    <h2><i class="fas fa-industry"></i> Consumo do Setor: @nomeSetor</h2>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-cogs"></i> Produto</th>
                <th><i class="fas fa-dollar-sign"></i> Valor Total Consumido</th>
                <th><i class="fas fa-calendar-alt"></i> Data de Consumo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consumo in Model)
            {
                <tr>
                    <td>@consumo.NomeProduto</td>
                    <td>@consumo.ValorTotalConsumido.ToString("C")</td>
                    <td>@consumo.DataConsumo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><i class="fas fa-exclamation-circle"></i> Nenhum consumo encontrado para este setor.</p>
}

<div class="mt-3">
    <a asp-action="Index" asp-controller="Setor" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Voltar para a Lista de Setores
    </a>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
